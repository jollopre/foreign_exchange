<h1>Foreign Exchange</h1>
<div class="row">
  <div class="col-xs-6">
    <%= form_tag(exchange_rates_at_path, method: 'GET', remote: true, class: 'form-horizontal', 'data-ref': 'exchange-rates#index') do %>
      <div class="form-group">
        <%= label_tag(:date, 'Date:', class: 'control-label col-xs-2') %>
        <div class="col-xs-4">
          <%= date_field_tag(:date, Date.today.to_s, class: 'form-control') %>
          <span id="helpDate" class="help-block" style="display: none;">Date is not a valid format</span>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag(:amount, 'Amount:', class: 'control-label col-xs-2') %>
        <div class="col-xs-2">
          <%= number_field_tag(:amount, 0, min: 0, class: 'form-control') %>
          <span id="helpAmount" class="help-block" style="display: none;">Amount is not a valid format</span>
        </div>
        <%= label_tag(:from, 'From:', class: 'control-label col-xs-2') %>
        <div class="col-xs-4">
          <%= select_tag(:from, options_for_select(from), { include_blank: true, class: 'form-control' }) %>
          <span id="helpFrom" class="help-block" style="display: none;">From cannot be empty</span>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag(:to, 'To:', class: 'control-label col-xs-offset-4 col-xs-2') %>
        <div class="col-xs-4">
          <%= select_tag(:to, options_for_select(to), { include_blank: true, class: 'form-control' }) %>
          <span id="helpTo" class="help-block" style="display: none;">To cannot be empty</span>
          <span id="helpToDup" class="help-block" style="display: none;">Please, select another currency</span>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-12">
          <%= submit_tag('Convert', class: 'btn btn-default') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="alert alert-success" role="alert" data-ref="exchange-rates#at-success" style="display:none;"></div>
    <div class="alert alert-warning" role="alert" data-ref="exchange-rates#at-error" style="display: none;"></div>
  </div>
</div>